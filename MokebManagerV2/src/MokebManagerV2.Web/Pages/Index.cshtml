@page
@model MokebManagerV2.Web.Pages.IndexModel
@{
	Layout = "~/Pages/Shared/_KhademyarLayout.cshtml";
}


<!-- Events Start -->
<div class="container-fluid event py-5" id="imageGallery">
    <div class="container py-5">
        <div class="row">
            <div class="col-12 col-md-8">
                <h1 class="display-6 mb-5 wow fadeIn" data-wow-delay="0.1s"><span class="text-primary">آشنایی با قابلیت های سامانه</span> </h1>
            </div>
            <div class="col-12 col-md-4 ltr">
